<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagoFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Confirmar Reserva"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu reserva"
        android:layout_below="@id/textView"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@id/textView"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personas"
        android:layout_below="@id/textView2"
        android:layout_alignStart="@id/textView7"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@id/textView6"
        android:layout_marginTop="0dp"
        android:layout_alignStart="@id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 marzo"
        android:layout_below="@id/textView7"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@id/textView6" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fechas"
        android:layout_below="@id/textView7"
        android:layout_alignStart="@id/textView5"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="193dp"
        android:layout_height="116dp"
        android:src="@drawable/osaka"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago con"
        android:layout_below="@id/imageView3"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@id/imageView3"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarjeta Credito *****4789"
        android:layout_below="@id/textView8"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:layout_below="@id/textView9"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@id/textView9"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500.000"
        android:layout_below="@id/textView10"
        android:layout_alignStart="@id/textView10"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagar y finalizar"
        android:layout_below="@id/textView11"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
