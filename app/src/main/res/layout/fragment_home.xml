<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeFragment">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/imageViewFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blured_bg"
        android:scaleType="centerCrop" />

    <!-- Contenedor de elementos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título "Inicio" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- EditText para ingresar qué quiere hacer hoy -->
        <EditText
            android:id="@+id/editTextActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="¿Qué quieres hacer hoy?"
            android:layout_marginBottom="16dp" />

        <!-- Button for fragmentRestaurant_list -->
        <Button
            android:id="@+id/btnRestaurantList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurantes" />


        <Button
            android:id="@+id/btnHotelList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoteles"
            />
        <Button
            android:id="@+id/btnreservas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservas Realizadas"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Sección de comentarios -->
            <RelativeLayout
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!-- Título "Comentarios" -->
                <TextView
                    android:id="@+id/comentariosTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Comentarios"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <!-- EditText para compartir experiencia -->
                <EditText
                    android:id="@+id/editTextExperiencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/comentariosTitle"
                    android:layout_marginBottom="8dp"
                    android:hint="Comparte tu experiencia" />

                <!-- Botón de enviar comentarios -->
                <Button
                    android:id="@+id/btnEnviarComentarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextExperiencia"
                    android:layout_marginTop="8dp"
                    android:text="Enviar" />
            </RelativeLayout>

            <!-- Botón de imagen para la cámara -->
            <ImageButton
                android:id="@+id/btnCamera"
                android:layout_width="155dp"
                android:layout_height="112dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:src="@drawable/img_3" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
